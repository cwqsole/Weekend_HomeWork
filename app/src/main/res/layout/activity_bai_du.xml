<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usercwq.weekend_homework.BaiDuActivity">

    <com.baidu.mapapi.map.MapView
        android:clickable="true"
        android:id="@+id/map_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.baidu.mapapi.map.MapView>
    <Button
        android:id="@+id/bt_me"
        android:text="I me Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edit_sousuo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_me"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_sousuo"
        android:layout_below="@id/bt_me"
        android:layout_toRightOf="@id/edit_sousuo"
        android:text="搜索"
         />

</RelativeLayout>
